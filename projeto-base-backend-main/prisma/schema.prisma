generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               Int               @id @default(autoincrement())
  username         String            @unique
  email            String?           @unique
  password         String
  isAdmin          Boolean           @default(false)
  tiposPatrimonio  TipoPatrimonio[]
  patrimonios      Patrimonio[]
  estoques         Estoque[]
  reservas         Reserva[]

  @@index([username])
  @@index([email])
}

model TipoPatrimonio {
  id          Int          @id @default(autoincrement())
  nome        String
  userId      Int
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  estoques    Estoque[]
}

model Patrimonio {
  id          Int          @id @default(autoincrement())
  nome        String
  codigo      String?
  estado      String //critico / danificado / bom
  valor       Float?
  data        DateTime @default(now()) // de quando foi requisitado
  userId      Int
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  estoques    Estoque[]
  reservas    Reserva[]
  status      String?      // status da reserva: Reservado / devolvido / cancelado
}

model Estoque {
  id                  Int             @id @default(autoincrement())
  descricao           String
  valor               Float
  data                DateTime
  tipo                String // 'RECEITA' ou 'DESPESA'
  userId              Int
  user                User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tipoPatrimonioId    Int?
  tipoPatrimonio      TipoPatrimonio? @relation(fields: [tipoPatrimonioId], references: [id])
  patrimonioId        Int?
  patrimonio          Patrimonio?     @relation(fields: [patrimonioId], references: [id])
  numeroRetiradas     Int? // Número total de retiradas
  retiradaAtual       Int? // Número da retirada atual
  estoquePaiId        Int? // ID do estoque pai (se for uma retirada)
  estoquePai          Estoque?        @relation("RetiradosEstoque", fields: [estoquePaiId], references: [id], onDelete: Cascade)
  retirados           Estoque[]       @relation("RetiradosEstoque")
  efetivado           Boolean         @default(false)
  status              String?         // status da reserva: Reservado / devolvido / cancelado
}

model Reserva {
  id              Int         @id @default(autoincrement())
  patrimonioId    Int
  patrimonio      Patrimonio  @relation(fields: [patrimonioId], references: [id], onDelete: Restrict)
  userId          Int
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  dataReserva     DateTime    @default(now())
  dataDevolucao   DateTime
  status          String      @default("ativa") // ativa / devolvido / cancelado
  criadoEm        DateTime    @default(now())
}
