generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               Int               @id @default(autoincrement())
  username         String            @unique
  password         String
  isAdmin          Boolean           @default(false)
  tiposPatrimonio  TipoPatrimonio[]
  patrimonios      Patrimonio[]
  lancamentos      Lancamento[]
}

model Book {
  id        Int     @id @default(autoincrement())
  title     String
  author    String
  available Boolean @default(true)
}

model TipoPatrimonio {
  id          Int          @id @default(autoincrement())
  nome        String
  userId      Int
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lancamentos Lancamento[]
}

model Patrimonio {
  id          Int          @id @default(autoincrement())
  descricao   String
  status      String //critico / normal / bom
  data       DateTime @default(now()) // de quando foi requisitado
  userId      Int
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lancamentos Lancamento[]
}

model Lancamento {
  id                  Int             @id @default(autoincrement())
  descricao           String
  valor               Float
  data                DateTime
  tipo                String // 'RECEITA' ou 'DESPESA'
  userId              Int
  user                User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tipoPatrimonioId    Int?
  tipoPatrimonio      TipoPatrimonio? @relation(fields: [tipoPatrimonioId], references: [id])
  patrimonioId        Int?
  patrimonio          Patrimonio?     @relation(fields: [patrimonioId], references: [id])
  numeroParcelas      Int? // Número total de parcelas
  parcelaAtual        Int? // Número da parcela atual
  lancamentoPaiId     Int? // ID do lançamento pai (se for uma parcela)
  lancamentoPai       Lancamento?     @relation("ParcelasLancamento", fields: [lancamentoPaiId], references: [id], onDelete: Cascade)
  parcelas            Lancamento[]    @relation("ParcelasLancamento")
  efetivado           Boolean         @default(false)
}
